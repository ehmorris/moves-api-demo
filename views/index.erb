<nav>
  <% for i in 0..6 %>
    <a href="/<%= Date.today - i %>"><%= (Date.today - i).strftime('%A') %></a>
  <% end %>
</nav>

<figure class="map" id="map"></figure>

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.1/jquery.min.js"></script>
<script src="http://api.tiles.mapbox.com/mapbox.js/v1.0.3/mapbox.js"></script>
<script type="text/javascript">
  var geojson_array = <%= @geojson %>;

  var map = L.mapbox.map(
      'map',
      'ehmorris.map-lfrw1qag').setView([42.348, -71.085], 14)

  $.each(geojson_array, function() {
    L.mapbox.markerLayer({
      type: 'Feature',
      geometry: this,
      properties: {}
    }).addTo(map);
  });
</script>
